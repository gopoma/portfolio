---
export interface Props {
	color: "white" | "black"
	icon: string;
	size: "sm" | "md" | "lg" | "xl";
}

const { color, icon, size } = Astro.props;
---

<i class={`icon icon--${size} icon--${color} ${icon}`}></i>

<style>
	.icon--sm {
		font-size: 1.08em;
	}

	.icon--md {
		font-size: 1.5em;
	}

	.icon--lg {
		font-size: 2em;
	}

	.icon--xl {
		font-size: 3.5em;
	}

	.icon--white {
		color: var(--just-white);
	}

	.icon--black {
		color: var(--just-black);
	}
</style>
